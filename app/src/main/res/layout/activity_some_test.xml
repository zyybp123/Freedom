<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SomeTestActivity">

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="选择" />

    <com.bpz.commonlibrary.ui.banner.PBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:ilHeight="20dp"
        app:mLocation="CENTER"
        app:periodicTime="5000"
        app:piHeight="4dp"
        app:piWidth="6dp"
        app:piRadius="1dp"
        app:piMargin="8dp"
        app:piNormalColor="@color/white_a60"
        app:piSelectedColor="@color/white"
        app:showModel="NONE">

    </com.bpz.commonlibrary.ui.banner.PBanner>

    <FrameLayout
        android:id="@+id/fr_frame_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>