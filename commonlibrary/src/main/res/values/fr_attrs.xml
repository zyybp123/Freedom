<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--封装自定义输入框的自定义属性-->
    <declare-styleable name="CustomEditText">
        <attr name="mLeftImgRes" format="reference" />
        <attr name="mRightImgResFirst" format="reference" />
        <attr name="mRightImgResSecond" format="reference" />
        <attr name="mTextColor" format="color" />
        <attr name="mDivideLineColor" format="color" />
        <attr name="mHintColor" format="color" />
        <attr name="mTextSize" format="dimension" />
        <attr name="mBackgroundColor" format="color" />
        <attr name="mPaddingStart" format="dimension" />
        <attr name="mPaddingEnd" format="dimension" />
        <attr name="mPaddingBottom" format="dimension" />
        <attr name="mShowDivideLine" format="boolean" />
        <attr name="mShowImgLeft" format="boolean" />
        <attr name="mShowImgRightF" format="boolean" />
        <attr name="mShowImgRightS" format="boolean" />
    </declare-styleable>
    <!--自定义的textView-->
    <declare-styleable name="PTextView">
        <attr name="pColor" format="color" />
        <attr name="pCornerRadius" format="dimension" />
        <attr name="pLeftTopCRadius" format="dimension" />
        <attr name="pRightTopCRadius" format="dimension" />
        <attr name="pRightBottomCRadius" format="dimension" />
        <attr name="pLeftBottomCRadius" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>
    <!--自定义的线性布局容器-->
    <declare-styleable name="LinearContainer">
        <attr name="mIsAverage" format="boolean" />
    </declare-styleable>
    <!--banner-->
    <declare-styleable name="PBanner">
        <attr name="ilWidth" format="dimension" />
        <attr name="ilHeight" format="dimension" />
        <attr name="ilColor" format="color" />
        <attr name="piWidth" format="dimension" />
        <attr name="piHeight" format="dimension" />
        <attr name="piSelectedColor" format="color" />
        <attr name="piNormalColor" format="color" />
        <attr name="piMargin" format="dimension" />
        <attr name="mTitleSize" format="dimension" />
        <attr name="mTitleColor" format="color" />
        <attr name="mNumSize" format="dimension" />
        <attr name="mNumColor" format="color" />
        <attr name="showModel" format="enum">
            <enum name="NONE" value="0" />
            <enum name="ONLY_NUM" value="1" />
            <enum name="ONLY_TITLE" value="2" />
        </attr>
        <attr name="mLocation" format="enum">
            <enum name="START" value="0" />
            <enum name="CENTER" value="1" />
            <enum name="END" value="2" />
        </attr>
        <attr name="periodicTime" format="integer" />
    </declare-styleable>
</resources>