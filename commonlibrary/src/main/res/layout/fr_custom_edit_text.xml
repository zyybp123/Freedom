<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fr_custom_et_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fr_custom_et_iv_left"
            android:layout_width="@dimen/c_edit_height"
            android:layout_height="@dimen/c_edit_height"
             />

        <EditText
            android:id="@+id/fr_custom_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/c_edit_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/app_name"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/fr_cursor_white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/fr_custom_et_iv_right_f"
            android:layout_width="@dimen/c_edit_height"
            android:layout_height="@dimen/c_edit_height"
            android:layout_gravity="end"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/fr_custom_et_iv_right_s"
            android:layout_width="@dimen/c_edit_height"
            android:layout_height="@dimen/c_edit_height"
            android:layout_gravity="end"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/fr_custom_et_v_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_edit_divide_height"
        android:layout_gravity="bottom" />
</LinearLayout>